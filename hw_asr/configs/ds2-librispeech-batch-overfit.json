{
  "name": "ds2-demo",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 32,
      "gru_hidden": 1400,
      "n_gru": 3,
      "conv_channels": 32,
      "dropout": 0.2
    }
  },
  "data": {
    "train": {
      "batch_size": 32,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 32
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 4e-4,
      "weight_decay": 0.0005
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": false
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "CTCWERMetric",
      "args": {
        "name": "WER (ctc)",
        "ctc_type": "torch",
        "beam_size": 600
      }
    },
    {
      "type": "CTCCERMetric",
      "args": {
        "name": "CER (ctc)",
        "ctc_type": "torch",
        "beam_size": 600
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 60,
      "epochs": 15,
      "anneal_strategy": "cos",
      "max_lr": 4e-4,
      "pct_start": 0.2,
      "div_factor": 4,
      "final_div_factor": 10
    }
  },
  "trainer": {
    "epochs": 15,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 30000,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10,
    "len_epoch": 60
  }
}