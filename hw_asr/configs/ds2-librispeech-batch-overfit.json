{
  "name": "ds2-demo",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [
      {
        "type": "AddColoredNoiseAug",
        "args": {
          "min_f_decay": 0,
          "p": 0.15
        }
      },
      {
        "type": "GainAug",
        "args": {
          "min_gain_in_db": -18,
          "max_gain_in_db": 6,
          "p": 0.15
        }
      },
      {
        "type": "PitchShiftAug",
        "args": {
          "min_transpose_semitones": -3.0,
          "max_transpose_semitones": 3.0,
          "p": 0.1
        }
      }
    ],
    "spectrogram": [
      {
        "type": "TimeStretchAug",
        "args": {
          "min_s": 0.8,
          "max_s": 1.2,
          "p": 0.1
        }
      }
    ]
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 32,
      "gru_hidden": 1400,
      "n_gru": 3,
      "conv_channels": 32,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 8,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean",
            "limit": 8
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 4e-4,
      "weight_decay": 0.0005
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": false
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    },
    {
      "type": "CTCWERMetric",
      "args": {
        "name": "WER (ctc)"
      }
    },
    {
      "type": "CTCCERMetric",
      "args": {
        "name": "CER (ctc)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 10,
      "epochs": 35,
      "anneal_strategy": "cos",
      "max_lr": 4e-4,
      "pct_start": 0.2,
      "div_factor": 4,
      "final_div_factor": 7
    }
  },
  "trainer": {
    "epochs": 35,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 30000,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10,
    "len_epoch": 10
  }
}