{
  "name": "ds2-demo",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 32,
      "gru_hidden": 1500,
      "n_gru": 3,
      "conv_channels": 32,
      "dropout": 0.1
    }
  },
  "data": {
    "train": {
      "batch_size": 70,
      "num_workers": 8,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-100",
            "max_audio_length": 16.7,
            "max_text_length": 270
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-clean-360",
            "max_audio_length": 16.7,
            "max_text_length": 270
          }
        },
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "train-other-500",
            "max_audio_length": 16.7,
            "max_text_length": 270
          }
        }
      ]
    },
    "val": {
      "batch_size": 50,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "dev-clean"
          }
        }
      ]
    },
    "test_clean": {
      "batch_size": 50,
      "num_workers": 10,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean"
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 2e-4,
      "weight_decay": 0.0005
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": false
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 80,
      "epochs": 150,
      "anneal_strategy": "cos",
      "max_lr": 3e-4,
      "pct_start": 0.15,
      "div_factor": 5,
      "final_div_factor": 8
    }
  },
  "trainer": {
    "epochs": 180,
    "save_dir": "saved/",
    "save_period": 5,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 30000,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 10,
    "len_epoch": 120
  },
  "decoder": {
    "path_to_lm": "kenlm/3-gram.pruned.1e-7.arpa"
  }
}