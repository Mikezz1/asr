{
  "name": "baseline",
  "n_gpu": 1,
  "preprocessing": {
    "sr": 16000,
    "spectrogram": {
      "type": "MelSpectrogram",
      "args": {}
    },
    "log_spec": true
  },
  "augmentations": {
    "wave": [],
    "spectrogram": []
  },
  "arch": {
    "type": "DeepSpeech",
    "args": {
      "n_feats": 32,
      "gru_hidden": 512,
      "n_gru": 1,
      "conv_channels": 32
    }
  },
  "data": {
    "train": {
      "batch_size": 80,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 250
          }
        }
      ]
    },
    "test-clean": {
      "batch_size": 80,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LibrispeechDataset",
          "args": {
            "part": "test-clean",
            "max_audio_length": 20.0,
            "max_text_length": 200
          }
        }
      ]
    },
    "lj-test": {
      "batch_size": 80,
      "num_workers": 4,
      "datasets": [
        {
          "type": "LJspeechDataset",
          "args": {
            "part": "train",
            "max_audio_length": 20.0,
            "max_text_length": 250
          }
        }
      ]
    }
  },
  "optimizer": {
    "type": "Adam",
    "args": {
      "lr": 3e-4
    }
  },
  "loss": {
    "type": "CTCLoss",
    "args": {
      "zero_infinity": false
    }
  },
  "metrics": [
    {
      "type": "ArgmaxWERMetric",
      "args": {
        "name": "WER (argmax)"
      }
    },
    {
      "type": "ArgmaxCERMetric",
      "args": {
        "name": "CER (argmax)"
      }
    }
  ],
  "lr_scheduler": {
    "type": "OneCycleLR",
    "args": {
      "steps_per_epoch": 110,
      "epochs": 25,
      "anneal_strategy": "cos",
      "max_lr": 4e-3,
      "pct_start": 0.4
    }
  },
  "trainer": {
    "epochs": 50,
    "save_dir": "saved/",
    "save_period": 15,
    "verbosity": 2,
    "monitor": "min val_loss",
    "early_stop": 30000,
    "visualize": "wandb",
    "wandb_project": "asr_project",
    "grad_norm_clip": 5
  }
}